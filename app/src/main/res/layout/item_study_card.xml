<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="24dp"
    app:cardCornerRadius="20dp"
    app:cardUseCompatPadding="true"
    app:cardElevation="8dp"
    android:foreground="?attr/selectableItemBackground">

    <!-- Full-height container to center text vertically -->
    <LinearLayout
        android:id="@+id/cardContentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="32dp"
        android:gravity="center"
        tools:ignore="UseCompoundDrawables">

        <!-- Front text -->
        <TextView
            android:id="@+id/tvFrontText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:gravity="center"
            tools:text="Front side sample" />

        <!-- Back text (initially hidden, will be toggled on flip animation later) -->
        <TextView
            android:id="@+id/tvBackText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:textSize="24sp"
            android:textColor="#424242"
            android:gravity="center"
            android:visibility="gone"
            tools:visibility="visible"
            tools:text="Back side sample" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
