<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Title -->
    <TextView
        android:id="@+id/tvStatsTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="@string/statistics_title"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="STATISTICS" />

    <!-- Two stat boxes side by side -->
    <LinearLayout
        android:id="@+id/statsContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvStatsTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/box_bg_1"
            android:padding="12dp"
            android:gravity="center">

            <TextView
                android:id="@+id/statA_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/statA_value_placeholder"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                tools:text="42" />

            <TextView
                android:id="@+id/statA_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/statA_label"
                android:textSize="12sp"
                android:textColor="#666666"
                tools:text="Completed today" />
        </LinearLayout>

        <View
            android:layout_width="12dp"
            android:layout_height="0dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/box_bg_2"
            android:padding="12dp"
            android:gravity="center">

            <TextView
                android:id="@+id/statB_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/statB_value_placeholder"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                tools:text="8" />

            <TextView
                android:id="@+id/statB_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/statB_label"
                android:textSize="12sp"
                android:textColor="#666666"
                tools:text="Decks created" />
        </LinearLayout>

    </LinearLayout>

    <!-- Chart placeholder (you can replace with real chart view) -->
    <ImageView
        android:id="@+id/chartPlaceholder"
        android:layout_width="0dp"
        android:layout_height="160dp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:scaleType="centerInside"
        android:src="@drawable/outline_bar_chart_4_bars_24"
        android:contentDescription="@string/chart_content_desc"
        app:layout_constraintTop_toBottomOf="@id/statsContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:visibility="visible" />

    <!-- RecyclerView below the dashboard -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvStatsList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toBottomOf="@id/chartPlaceholder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/deck_stat_card" />

</androidx.constraintlayout.widget.ConstraintLayout>