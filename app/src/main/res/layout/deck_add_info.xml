<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Back button at top-left -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@null"
        android:contentDescription="@string/cd_navigate_back"
        android:padding="8dp"
        android:src="@drawable/baseline_arrow_back_ios_24"
        app:tint="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/btnBack"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/add_card_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            tools:context=".DeckAddingActivity">

            <!-- Deck creation section -->
            <TextView
                android:id="@+id/tvAddDeckTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/add_deck_title"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="16dp" />

            <EditText
                android:id="@+id/etDeckName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_deck_name"
                android:inputType="textCapSentences|textPersonName"
                android:maxLines="1"
                android:textSize="16sp"
                android:background="@android:drawable/edit_text"
                android:padding="12dp"
                android:layout_marginBottom="12dp" />

            <EditText
                android:id="@+id/etDeckDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_deck_description"
                android:inputType="textMultiLine|textCapSentences"
                android:minLines="3"
                android:textSize="16sp"
                android:gravity="top|start"
                android:background="@android:drawable/edit_text"
                android:padding="12dp"
                android:layout_marginBottom="20dp" />

            <Button
                android:id="@+id/btnCreateDeck"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/create_deck_button"
                android:layout_marginBottom="24dp" />

            <!-- Card creation section (hidden initially, reused later) -->
            <TextView
                android:id="@+id/tvAddCardTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/add_card_title"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="start"
                android:layout_marginBottom="12dp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/etFrontSide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_front_side"
                android:inputType="textMultiLine|textCapSentences"
                android:minLines="4"
                android:textSize="16sp"
                android:gravity="top|start"
                android:background="@android:drawable/edit_text"
                android:padding="12dp"
                android:layout_marginBottom="12dp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/etBackSide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_back_side"
                android:inputType="textMultiLine|textCapSentences"
                android:minLines="4"
                android:textSize="16sp"
                android:gravity="top|start"
                android:background="@android:drawable/edit_text"
                android:padding="12dp"
                android:layout_marginBottom="16dp"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnConfirmAdd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/confirm_button"
                android:visibility="gone" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>